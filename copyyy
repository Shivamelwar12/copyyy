void oneplus_Show_rec()
{
	char n[30],field[20],newdata[20],field1[20],field2[20];
	FILE *fp,*fp1;
	fp=fopen("OnePlus_coustomer_rec.txt","r+");
	
	if(fp==NULL)
	{
		printf("\nCannot open file\n");
	}
	printf("\n Enter person name whose rec u want to update");
	scanf("%s",n);
	
	while(fscanf(fp,"%s%s%s%s",coustomer.name,coustomer.add,coustomer.email,coustomer.ph)!=EOF)
	{
		printf("hello"); 
		if(strcmp(coustomer.name,n)==0)
		{
				printf("RECORD FOUND");
		
			printf("\n%s\n%s\n%s\n%s",coustomer.name,coustomer.add,coustomer.email,coustomer.ph);
			
			printf("\n Enter field name which u want to update");
			scanf("%s",field);
			printf("\n Enter field name which u want to update");
			scanf("%s",field1);
			printf("\n Enter field name which u want to update");
			scanf("%s",field2);
				
			
			if((strcmp(field,"name")==0)||(strcmp(field1,"add")==0)||(strcmp(field2,"email")==0))
			{
				printf("Enter new data");
				
				scanf("%s",coustomer.name);
				
				fp1=fopen("OnePlus_coustomer_rec.txt","w");	
	        	fprintf(fp1,"\n%s\n%s\n%s\n%s",coustomer.name,coustomer.add,coustomer.email,coustomer.ph);
		
				printf("RECORD UPDATE'D");
				
			}
			else
			{
				printf("REC  not found");
			}
		}
	
		
	}	
	fclose(fp);
	fclose(fp1);
}

