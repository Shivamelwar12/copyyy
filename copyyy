struct project
{ 
 char name[40];
 char add[40];
 char email[40];
 char  ph[20];
 }coustomer;
 
struct login 
{
	char name[20];
	char pass[20];
	
}l;

main()
{
	char ch;
	 int n;   
	
	printf("***********************************************WELCOME TO AMAZON SHOPPING***********************************************\n");
	printf("-------------LOGIN-------------\n\n");
	
	printf("\n Select Your Login\n");
	printf("\n1.....SIGN UP");
	
	printf("\n2.....SIGN IN\n");
	scanf("%d",&n);
	if(n==1)
	{
		
	
	 	char u[20],p[20];
		FILE *fp;
		fp=fopen("login1.txt","w");
		
		printf("\n Enter Username:");
		scanf("%s",l.name);
		printf("\n Enter Password:");
		scanf("%s",l.pass);
	
		fprintf(fp,"\n\n%s \n\n%s",l.name,l.pass);
	    printf("\n Registration Done\n");
	
		fclose(fp);
		
		 login1();
    }
	else if(n==2)
	{
		log();
		
	}
	else if(n>=2)
	{
		printf("\nPlease Enter Right Login....");
	}
   
	

}
void login1()
{
	char ch;
	printf("\nDO U WANT TO SIGN IN RIGHT NOW PRESS 'y'\n ");
	fflush(stdin);
	scanf("%c",&ch);
	if((ch=='Y')||(ch=='y'))
	{
		log();	
	
    }
	
	
	
	
}

void log()
{
			    char u[20],p[20];
			    printf("\n SIGN IN");
				printf("\n \n \t \t LOGIN HERE \n");
				printf("------------------------------------------\n");
	
				printf(" Enter Username: ");
				scanf("%s",u);
				printf(" Enter Password: ");
				scanf("%s",p);
			
				FILE *fp1;
				fflush(stdin);
	
				fp1=fopen("login1.txt","r");
				
				while(fscanf(fp1,"\n %s %s",l.name,l.pass)!=EOF)
				{
					printf("%s%s",l.name,l.pass);
					if(((strcmp(l.name,u)==0))&&((strcmp(l.pass,p)==0)))
			   		{
			    		printf("\n \n \t \t LOGIN CORRECT \n");	
			    		printf("------------------------------------------\n");
						go();
			   	 	}			 		
		    	    else 
			        {
		 	        	printf("\n \n \t \t LOGIN INCORRECT \n");	
			        	printf("------------------------------------------\n");
			        	log();
 		   	        }
 		   	    	fclose(fp1);
                }
			
	
		
}
void oneplus_rec()
{   
    char ch;
	printf("OnePlus_coustomer_Records");
    FILE *fp;
	fp=fopen("OnePlus_coustomer_rec.txt","r");
    if(fp==NULL)
    {   
     	printf("You dont have any record yet");
                    	 
    }
   	while(fscanf(fp,"\n%s  \n%s  \n%s  \n%s",coustomer.name,coustomer.add,coustomer.email,coustomer.ph)!=EOF)
  	printf("\n%s\n%s\n%s\n%s",coustomer.name,coustomer.add,coustomer.email,coustomer.ph);
   	fclose(fp);
   	printf("\n Do Want To Continue Shopping Press 'Y' And Exit For 'N'\n");
	fflush(stdin);
	scanf("%c",&ch);
	if((ch=='Y')||(ch=='y'))
	{
		go();
					   	 	
	}
	
}
